{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": {
      "text":"Correlation of Country's GDP per capita and numbers of Top 200 University and Freedom to make life choices",
      "fontSize": 18
    },
    "data": {
      "url": "data/2019-Country's-detail.csv"
    },
    "params": [
        {
            "name": "Number_of_University_Above",
            "value": 0,
            "bind": {
            "input": "range",
            "min": 0,
            "max": 50,
            "step": 1,
            "name": "Minimum Number of Top 200 University: "
            }
            },
           
        {
          "name": "Continent_selection",
          "bind": {
            "input": "select",
            "options": [
              null,
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "labels": [
              "Show All",
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "name": "Continent Selection: "
          }
        }
      ],
      "transform": [
        {"filter": "datum.GDP_per_capita > 0"},
        {"filter": "datum.Freedom_to_make_life_choices > 0"},
        {"filter": "datum.number_of_top_200_University > Number_of_University_Above"},
        {
          "filter": "Continent_selection == null || datum.Continent == Continent_selection"
        }
      ],
      "encoding": {
        "x": {
          "field": "Freedom_to_make_life_choices",
          "type": "quantitative",
          "title": "Freedom to make life choices Score",
          "axis": {
            "tickCount": 8,
            "titleFontSize": 16,
            "labelFontSize": 13
          },
          "scale":{"domain":[0.1,0.7]}

        },
        "y": {
          "field": "GDP_per_capita",
          "type": "quantitative",
          "title": "GDP per capita",
          "axis": {
            "tickCount": 10,
            "titleFontSize": 16,
            "labelFontSize": 13
          },
          "scale":{"domain":[0.6,1.6]}

        }
      },
      "layer": [
        {
          "selection": {
            "continent_highlight": {
              "type": "multi",
              "fields": ["Continent"],
              "bind": "legend"
            }
          },
          "mark": "circle",
          "encoding": {
            "size": {
                "field": "number_of_top_200_University",
                "type": "quantitative",
                "scale": {
                "type": "threshold",
                "domain": [5, 10, 15,30],
                "range": [50, 100, 150, 300, 500]
                },
                "legend": {"format": ".1s"}
            },               
            "color": {
              "field": "Continent",
              "type": "nominal",
              "scale": {
                "domain": [
                  "North America",
                  "South America",
                  "Europe",
                  "Africa",
                  "Asia",
                  "Oceania"
                ],
                "range": [
                  "#e41a1c",
                  "#984ea3",
                  "#ff7f00",
                  "#a6cee3",
                  "#377eb8",
                  "#a65628"
                ]
              }
            },
            "opacity": {
              "condition": {"selection": "continent_highlight", "value": 0.8},
              "value": 0.2
            },
            "tooltip": [
              {"field": "Country", "type": "nominal"},
              {"field": "Continent", "type": "nominal"},
              {"field": "number_of_top_200_University", "type": "quantitative", "format": ","},
              {"field": "Freedom_to_make_life_choices", "type": "quantitative", "format": ","},
              {"field": "GDP_per_capita", "type": "quantitative", "format": ","}
            ]
          }
        },
        {
            "mark": {
              "type": "text",
              "align": "right",
              "baseline": "middle",
              "dx": -6,
              "fontSize": 11.5,
              "fontStyle": "italic"
            },
            "encoding": {
              "text": {"field": "Country", "type": "nominal"},
              "color": {"value": "black"},
              "opacity": {
                "condition": {
                  "test": "datum['Country'] == 'Australia' || datum['Country'] == 'United Kingdom' || datum['Country'] == 'United States of America'|| datum['Country'] == 'India'|| datum['Country'] == 'South Korea'|| datum['Country'] == 'Singapore'|| datum['Country'] == 'Chile'",
                  "value": 1
                },
                "value": 0
              }
            }
          }
        ]
      }